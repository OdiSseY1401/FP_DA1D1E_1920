	}
	
	public static boolean esCapicua (int n) {
		boolean capi = true; //Empezamos diciendo que el boolean es verdadero
		String num = Integer.toString(n); //Tenemos que pasar a cadena e numero
		int longitud = num.length(); //Tendremos que saber la longitud del número para saber si tenemos que comparar todos los numeros
		for (int i = 1; i < longitud/2 && capi; i++) {
			
		}
		
		return capi;
	}
}
